extends includes/loading
block loaded
  .row: .col-sm-12: .page-header
    h1 Installed Content
  .row(v-for="(brand, cars) in grouped_cars")
    .col-md-12
      h4
        img(v-bind:src="cars[0].logo.url", height="50")
        |&nbsp;&nbsp;
        span(v-text="brand")
      hr
    .col-md-4(v-for="car in cars")
      .panel.panel-default
        .panel-body
          .thumbnail
            img(v-bind:src="car.liveries[0].preview.url")
          .caption
            p(v-text="car.name")

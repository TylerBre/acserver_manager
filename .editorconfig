# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# all files
[*]
charset = utf8
trim_trailing_whitespace = true
indent_style = space
end_of_line = lf
insert_final_newline = false

# select file types
[{*.js, *.jade, *.html, *.json, *.less}]
indent_size = 2
